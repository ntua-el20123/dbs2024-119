<!-- views/steps.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Steps Table</title>
</head>
<body>
    <h1>Steps Table</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Recipe ID</th>
                <th>Step Number</th>
                <th>Step Description</th>
            </tr>
        </thead>
        <tbody>
            <% rows.forEach(row => { %>
                <tr>
                    <td><%= row.recipe_id %></td>
                    <td><%= row.step_number %></td>
                    <td><%= row.step_description %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
