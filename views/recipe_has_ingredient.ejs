<!-- views/recipe_has_ingredient.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Has Ingredient Table</title>
</head>
<body>
    <h1>Recipe Has Ingredient Table</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Recipe ID</th>
                <th>Ingredient ID</th>
                <th>Amount</th>
                <th>Measurement Unit</th>
            </tr>
        </thead>
        <tbody>
            <% rows.forEach(row => { %>
                <tr>
                    <td><%= row.recipe_id %></td>
                    <td><%= row.ingredient_id %></td>
                    <td><%= row.amount %></td>
                    <td><%= row.measurement_unit %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
